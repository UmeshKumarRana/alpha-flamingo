<%- include("partials/header") %>

<div class="container">

  <h2 class="text-center mt-5">Submit A New Image Of <em>"<%= monument.name %>"</em></h2>
 
    <form id="special" action="/monuments/<%= monument._id %>" method="POST">
        <div class="form-group">
          <label for="image"><strong class="mr-3">Image:</strong></label>
          <input class="form-control" type="text" id="image" placeholder="image url" name="img">
        </div>
        <div class="d-flex justify-content-center">
          <button class="btn btn-primary">Submit</button>
        </div>
  </div>

</div>

